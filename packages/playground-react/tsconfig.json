{
  "compilerOptions": {
    "lib": ["es2015", "es2016", "es2017", "dom", "WebWorker"],
    "strict": true,
    "sourceMap": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "skipLibCheck": true,
    "module": "ES2015",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "node_modules"
  ]
}
