{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "ES2019",
      "dom",
      "WebWorker",
      "ESNext"
    ],
    "strict": true,
    "sourceMap": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist",
    "skipLibCheck": true,
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "Node"
  },
  "include": ["src/"],
  "exclude": ["node_modules"]
}
