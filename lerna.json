{
  "packages": [
    "packages/*"
  ],
  "npmClient": "pnpm",
  "command": {
    "version": {
      "createRelease": "github",
      "conventionalCommits": true,
      "message": "chore: [skip ci] bump packages",
      "ignoreChanges": [
        "**/*.md",
        "**/*.stories.mdx",
        "**/*.stories.@(js|jsx|ts|tsx)"
      ]
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore: [skip ci] bump packages"
    }
  },
  "version": "0.0.1"
}